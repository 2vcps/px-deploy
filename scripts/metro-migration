exec &>/var/log/vagrant.$script
while : ; do
  n=$(ssh node-$cluster-1 pxctl status 2>/dev/null | grep "Yes.*Online.*Up" | wc -l)
  [ $n -eq 6 ] && break
  sleep 1
done

kubectl apply -f - <<EOF
apiVersion: stork.libopenstorage.org/v1alpha1
kind: SchedulePolicy
metadata:
  name: appschedule
  namespace: default
policy:
  interval:
    intervalMinutes: 1
---
apiVersion: stork.libopenstorage.org/v1alpha1
kind: MigrationSchedule
metadata:
  name: appmigrationschedule
  namespace: default
spec:
  template:
    spec:
      clusterPair: remotecluster-2
      includeResources: true
      startApplications: false
      includeVolumes: false
      namespaces:
      - default
  schedulePolicyName: appschedule
EOF
